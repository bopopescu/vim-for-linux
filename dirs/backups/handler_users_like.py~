log = get_logger()
class UsersLikeHandler(BaseHtHandler):
    @requires_auth
    @asynchronous
    def post(self):
        log.info("UsersLikeHandler.post is called")
        body = json.loads(self.request.body, encoding='utf-8')

        post_id = body.get('post_id',None)
        usernames = body.get('usernames',None)
        username_array=usernames.split(",")

        lookup = {
            "post_id":post_id,
            "username": {"$in":username_array}
        }
        # log.info("lookup:"+json.dumps(lookup,
        #                   indent=2,
        #                   ensure_ascii=False,
        #                   cls=MongoFieldEncoder))
        user_like_cursor=options.dbconn.User_Like_post.find(lookup)
        user_like_array=[]
        if user_like_cursor is not None:
            for user_like in user_like_cursor:
                user_like_array.append(user_like)

        reponse_json={}
        reponse_json["entities"]=user_like_array
        response = json.dumps(reponse_json,
                          indent=2,
                          ensure_ascii=False,
                          cls=MongoFieldEncoder)
        log.info("response:"+response)
        self.write(response)
        self.finish()