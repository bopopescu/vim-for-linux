    from tornado.simple_httpclient import SimpleAsyncHTTPClient as AsyncHTTPClient
log = get_logger()
class ActivitiesPushListHandler(BaseHtHandler):
    @asynchronous
    @requires_auth
    def get(self):
        log.info("ActivitiesPushListHandler.get:"+self.request.body)

        activity_id = self.get_argument('activity_id',"")


        response={}
        if activity_id:
            where={
                "activity_id":activity_id
            }
            result=list(MongoFront.find_all(where,"activities_push")) or []
            response["entities"]=result
        self.write(json.dumps(response,indent=2, ensure_ascii=False,cls=MongoFieldEncoder))
        self.finish()


    def fire_response_bad_response(self):
        """
        返回登录请求错误响应
        """
        self.set_status(400)
        response = {}
        response["error"] = "invalid_grant"
        response["error_description"] = "invalid username or password"
        self.write(json.dumps(response, indent=2, ensure_ascii=False))
        self.finish()
