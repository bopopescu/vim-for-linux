"""
二分查找法  和 斐波那契数
"""
# 循环的方式 实现二分查找
def search(lst, target):
    low = 0
    upper = len(lst) - 1

    while low <= upper:
        mid = (low+upper) // 2
        if lst[mid] == target:
            print(mid)
            return mid
        elif lst[mid] < target:
            low = mid + 1
        else:
            upper = mid - 1



def search1(lst, target, low, high):
    if low > high:
        return
    mid = (low+high)//2
    if lst[mid] == target:
        print(mid)
        return mid
    elif lst[mid] < target:
        return search(lst, target, mid+1, high)
    else:
        return search(lst, target, low, high-1)

 

if __name__ == '__main__':
    lst = [1,2,3,4,5,6,7,8,9]
    search1(lst, 6, 0, 9)


