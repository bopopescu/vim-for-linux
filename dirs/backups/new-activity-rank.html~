<script type="text/javascript">
  $(function(){
    var request_url= "/singleActivity?id="+queryString("post_id")
    var result=getRequest(request_url,'','GET','','')
    if (result.entities && result.entities.length>0)
    {
      var activity=result.entities[0];
      var rank_area_all="-1";
      if (activity.rank_area_all){
        rank_area_all=""+activity.rank_area_all
      }
      $("#rank_area_all").find("option[value='"+rank_area_all+"']").attr("selected",true);

        var rank_in_boutique="-1";
        if (activity.boutique){
            boutique = activity.boutique
            if (boutique=='2'){
                $('#activity_boutique').show()
            }
        }
        if (activity.rank_in_boutique){
            rank_in_boutique=""+activity.rank_in_boutique
        }
        $("#rank_in_boutique").find("option[value='"+rank_in_boutique+"']").attr("selected",true);

      var rank_belong_area="-1";
      if (activity.rank_belong_area){
        rank_belong_area=""+activity.rank_belong_area
      }
      $("#rank_belong_area").find("option[value='"+rank_belong_area+"']").attr("selected",true);

        var rank_in_group="-1";
        if (activity.fish_code){
            fish_code = activity.fish_code
            if (fish_code.toString().indexOf("1") > -1){
                $('#activity_big_fish').show()
            }
            if (fish_code.toString().indexOf("2") > -1){
                $('#activity_biz_group').show()
            }
        }
        if (activity.rank_in_group){
            rank_in_group=""+activity.rank_in_group
        }
        $("#rank_in_group").find("option[value='"+rank_in_group+"']").attr("selected",true);

        var rank_in_big="-1";
        if (activity.rank_in_big){
            rank_in_big=""+activity.rank_in_big
        }
        $("#rank_in_big").find("option[value='"+rank_in_big+"']").attr("selected",true);
      var rank_in_post="-1";
      if (activity.rank_in_post){
        rank_in_post=""+activity.rank_in_post
      }
      $("#rank_in_post").find("option[value='"+rank_in_post+"']").attr("selected",true);
    }
    else{
      alert("数据异常，请重新登陆")
    }
  });

  function setRank() {
    var post_id=queryString("post_id")
    var d={
      "rank_area_all":parseInt($('#rank_area_all').val()),
      "rank_belong_area":parseInt($('#rank_belong_area').val()),
      "rank_in_post":parseInt($('#rank_in_post').val()),
      "rank_in_boutique":parseInt($('#rank_in_boutique').val()),
      "rank_in_big":parseInt($('#rank_in_big').val()),
      "rank_in_group":parseInt($('#rank_in_group').val()),
      "activity_id":post_id
    }
  //  window.parent.searchActivityById(post_id,$('#rank').val(),type)
  //  searchActivityById()
  //  alert("d:"+JSON.stringify(d))
    request_url=fishing_admin_Url+"/activity_rank_area"
    reusult=getRequest(request_url,d,'PUT','','排名设置成功')
//      运营需要不刷新设置片区，所有注释掉这行
//      window.parent.location.reload();
    closeAlertPage();
  }
</script>

